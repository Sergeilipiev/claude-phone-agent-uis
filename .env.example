# UIS API Configuration
UIS_API_TOKEN=your_uis_api_token
UIS_API_URL=https://dataapi.uiscom.ru/v2.0
UIS_USER_ID=your_uis_user_id
UIS_SITE_ID=your_site_id

# Claude API Configuration
CLAUDE_API_KEY=your_claude_api_key
CLAUDE_MODEL=claude-3-opus-20240229
CLAUDE_MAX_TOKENS=4096

# MCP Configuration
MCP_CONFIG_PATH=/Users/admin/Library/Application Support/Claude/claude_desktop_config.json

# Speech Services
STT_PROVIDER=google # Options: google, yandex
TTS_PROVIDER=google # Options: google, yandex

# Google Cloud (if using Google STT/TTS)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/google-credentials.json
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# Yandex Cloud (if using Yandex STT/TTS)
YANDEX_API_KEY=your_yandex_api_key
YANDEX_FOLDER_ID=your_folder_id

# Server Configuration
PORT=3000
NODE_ENV=production

# Webhook Security
WEBHOOK_SECRET=your_webhook_secret_key

# Database (for storing call history)
DATABASE_URL=postgresql://user:password@localhost:5432/claude_phone_agent

# Redis (for caching and queues)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info # Options: error, warn, info, debug
LOG_FILE=/var/log/claude-phone-agent/app.log

# Audio Processing
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_FORMAT=LINEAR16

# Call Settings
MAX_CALL_DURATION=3600 # Maximum call duration in seconds (1 hour)
SILENCE_THRESHOLD=2000 # Silence detection threshold in ms

# Rate Limiting
RATE_LIMIT_CALLS_PER_HOUR=100
RATE_LIMIT_CALLS_PER_DAY=1000
